<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/exoplayer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/steps_long_description_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exoplayer_view"
        android:textSize="20sp"
        tools:text="Long Description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/steps_long_description_detail">

        <Button
            android:id="@+id/prev_step_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/steps_long_description_detail"
            android:layout_weight="1"
            android:text="Prev Step" />

        <Button
            android:id="@+id/next_step_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next Step" />
    </LinearLayout>
</RelativeLayout>